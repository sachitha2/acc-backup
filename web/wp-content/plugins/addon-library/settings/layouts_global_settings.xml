<?xml version="1.0" encoding="UTF-8"?>

	<fields>
			<fieldset name="grid_editor" label="General">

				<field name="row_container_width" 
					type="text"
					default="100%"
					label="Container Width"
					unit="px or %"
					description="The row container width">
				</field>
								
				<field name="col_gutter" 
					type="text"
					default="15" 
					label="Column Gutter"
					unit="px"
					description="The padding left and right of the column">
				</field>
								
				<field name="row_gutter" 
					type="text"
					default="10"
					label="Row Gutter"
					unit="px"
					description="The padding top and bottom of the rows">
				</field>
				
				<field name="space_between_addons" 
					type="text"
					default="10"
					label="Space Between Addons"
					unit="px"
					description="The vertical space between addons">
				</field>
				
			</fieldset>
			
			<fieldset name="row_titles" label="Row Titles">
			
				<field name="show_row_titles_global" 
					type="radio"
					default="yes"
					label="Show Row Titles"
					description="Show row title">  
						<option value="yes" text="Yes"></option>
						<option value="no" text="No"></option>
				</field>
				
				<field name="row_title_global_css" 
					type="textarea"
					default="" 
					label="Row Titles Global Css"
					description="Row titles global css">  
				</field>
				
			</fieldset>
	</fields>